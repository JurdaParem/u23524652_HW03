@model u23524652_HW03.Models.borrows

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<h2>Create Borrow Record</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Borrow Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
           <label class="form-label">Student</label>
            <div class="col-md-10">
                @Html.DropDownList("studentId", null, "Select a student", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.studentId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-1">
            @Html.LabelFor(model => model.bookId, "Book", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("bookId", null, "Select a book", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.bookId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-1">
           <label>Taken Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.takenDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.takenDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-2">
          <label class="form-label">Brought Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.broughtDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.broughtDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="pt-2">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
