@model u23524652_HW03.Models.students

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<h2>Create Student</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-1">
            <label>Surname</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-1">
            <label>Birth Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.birthdate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.birthdate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-1">
            <label>Gender</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.gender, new SelectList(new[] {
                    new { Value = "M", Text = "Male" },
                    new { Value = "F", Text = "Female" }
                }, "Value", "Text"), "Select Gender", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-1">
            <label>Class</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.@class, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.@class, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-1">
            <label>Point</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.point, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.point, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="pt-2">
    @Html.ActionLink("Back to List", "CombinedIndex","Home", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
